{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "esNext",
    "esModuleInterop": true,
    "strict": true,
    "target": "ESNext",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "outDir": "./dist",
    "lib": ["ESNext"],
    "resolveJsonModule": true,
    "declaration": true,
    "typeRoots": [
      "./types", "./node_modules/@types", "reflect-metadata"
    ],
    "forceConsistentCasingInFileNames": true  ,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
  },
  "files": ["src/cli.ts"],
  "exclude": [
    "**/__mocks__",
    "./node_modules",
    "./types",
    "**/*.d.ts",
    "./test",
  ]
}
